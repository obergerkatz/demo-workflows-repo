{
  "channel": "${{ env.CHANNEL }}",
  "text": "${{ env.EMOJI }} ${{ env.WORKFLOW }} #${{ env.RUN_NUMBER }}",
  "thread_ts": "${{ env.THREAD_TS }}",
  "blocks": [
    {
      "type": "header",
      "text": {
        "type": "plain_text",
        "text": "${{ env.WORKFLOW }} #${{ env.RUN_NUMBER }} ${{ env.EMOJI }}",
        "emoji": true
      }
    },
    {
      "type": "divider"
    },
    {
      "type": "context",
      "elements": [
        {
          "type": "mrkdwn",
          "text": "• *Repository:* `${{ env.REPO }}`"
        }
      ]
    },
    {
      "type": "context",
      "elements": [
        {
          "type": "mrkdwn",
          "text": "• *Branch:* `${{ env.REF_NAME }}`"
        }
      ]
    },
    {
      "type": "context",
      "elements": [
        {
          "type": "mrkdwn",
          "text": "• *Environment:* `${{ env.ENVIRONMENT }}`"
        }
      ]
    },
    {
      "type": "context",
      "elements": [
        {
          "type": "mrkdwn",
          "text": "• *Tag:* `${{ env.TAG }}`"
        }
      ]
    },
    {
      "type": "context",
      "elements": [
        {
          "type": "mrkdwn",
          "text": "• *Run by:* `@${{ env.ACTOR }}`"
        }
      ]
    },
    {
      "type": "divider"
    },
    {
      "type": "section",
      "fields": [
        {
          "type": "mrkdwn",
          "text": ":copyright: <https://github.com/${{ env.REPO }}/commit/${{ env.SHA }}|View Commit>"
        },
        {
          "type": "mrkdwn",
          "text": ":page_facing_up: <https://github.com/${{ env.REPO }}/actions/runs/${{ env.RUN_ID }}|View Workflow Logs>"
        }
      ]
    }
  ]
}
